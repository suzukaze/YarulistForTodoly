<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorAccent">@color/app_accent</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorAccent">@color/app_accent</item>
        <item name="actionMenuTextColor">@color/gray</item>
    </style>

    <style name="Button">
        <item name="android:textSize">@dimen/font_smaller</item>
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="ContentLargeText">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/light_black</item>
    </style>
    <style name="ContentText">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/light_black</item>
    </style>
    <style name="ContentSmallText">
        <item name="android:textSize">@dimen/font_smaller</item>
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="ContentWhiteLargeText">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ContentWhiteText">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ContentWhiteSmallText">
        <item name="android:textSize">@dimen/font_smaller</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NoneDialogTheme" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
